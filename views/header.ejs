<!-- css -->
<style>
  nav {
    background-color: #0A2541;
  }

  .navbar-brand,
  .nav-link,
  .profile {
    color: white;
  }

  .nav-link:hover {
    color: aqua;
  }

  .navbar-brand:hover {
    color: white;
  }
</style>

<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <!-- dashboard link -->
      <a class="navbar-brand h1 mx-5" href="/dashboard">
        Get Placement</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-around " id="navbarSupportedContent">
        <!-- auth -->
        <% if (locals.user) {%>
          <!-- links -->
          <ul class="nav ">
            <li class="nav-item mx-2">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link" aria-current="page" href="/student/add-student">Add new Student</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link" href="/interview/add-interview">Add an Interview</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link" href="/job_page/list">Jobs</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link" href="/download">Download Report</a>
            </li>
          </ul>
          <!-- profile and signout button -->
          <form>
            <a class="profile btn btn-info mx-2"  href="/profile">
              <i class="fa-regular fa-user"></i>
              <%= user.username %>
            </a>
            <a class="btn btn-success mx-2" href="/sign-out">Sign Out</a>
          </form>

          <%} %>
      </div>
    </div>
  </nav>
</header>